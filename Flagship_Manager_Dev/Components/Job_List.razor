    public void Sort(int sortType, bool archive, bool ignoreReverse = false)
    {
        //Sorts list by type.
        //Sort function is passed with the int sortType.
        if(sortType == CurrentSort && !ignoreReverse)
        {
            Array.Reverse(JobList);
            return;
        }

        switch (sortType)
        {
            case 0:
                //Sort by Status 

                Array.Sort(JobList, (a, b) => a.Status.CompareTo(b.Status));
                CurrentSort = 0;
                break;
            case 1:
                //Sort by Render application

                Array.Sort(JobList, (a, b) => a.RenderApp.CompareTo(b.RenderApp));
                CurrentSort = 1;
                break;
            case 2:
                //Sort by Shot name
                    
                Array.Sort(JobList, (a, b) => a.Name.CompareTo(b.Name));
                CurrentSort = 2;
                break;
            case 3:
                //Sort by priority.
                
                Array.Sort(JobList, (a, b) => a.Priority.CompareTo(b.Priority));
                CurrentSort = 3;
                break;
            case 4:
                //Sort by Progress
                //TODO: Auto sort on progress changes.

                Array.Sort(JobList, (a, b) => a.Progress.CompareTo(b.Progress));
                CurrentSort = 4;
                break;
            case 5:
                //Sort by Job length

                Array.Sort(JobList, (a, b) => a.TotalFramesToRender.CompareTo(b.TotalFramesToRender));
                CurrentSort = 5;
                break;
            case 6:
                //Sort by Active time

                Array.Sort(JobList, (a, b) => a.totalActiveTime.CompareTo(b.totalActiveTime));
                CurrentSort = 6;
                break;
            case 7:
                //Sort by Remainingn time

                Array.Sort(JobList, (a, b) => a.RemainingTime.CompareTo(b.RemainingTime));
                CurrentSort = 7;
                break;
            case 8:
                //Sort by output file format

                Array.Sort(JobList, (a, b) => a.FileFormat.CompareTo(b.FileFormat));
                CurrentSort = 8;
                break;
            default:
                if (archive)
                {
                    //Sort by Archive time
                    Array.Sort(JobList, (a, b) => b.ArchiveDate.CompareTo(a.ArchiveDate));
                }
                else
                {
                    //Sort by submit time
                    Array.Sort(JobList, (a, b) => b.CreationTime.CompareTo(a.CreationTime));
                }
                CurrentSort = -1;
                break;
        }
    }

