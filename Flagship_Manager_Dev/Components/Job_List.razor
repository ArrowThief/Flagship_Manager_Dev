    internal void UpdateLists()
    {
        //Updates the UI Job List with any changes from the DB Job List. 
        //Runs everytime the UI is renndered.

        if (Archive)
        {
            if (DB.archive.Count() != JobList.Count())
            {
                JobList = DB.archive.ToArray();
                Sort(CurrentSort, true);
            }
        }
        else 
        {
            if (DB.active.Count() != JobList.Count())
            {
                JobList = DB.active.ToArray();
                Sort(CurrentSort, false);
            }
        }
        if (CurrentSort == 3) Sort(3, Archive, true);
    }
    protected override void OnAfterRender(bool firstRender)
    {
        //Protected method for first render. 
        //Starts timer that calls method every second.

        if (firstRender)
        {
            BuildJS();
            time2 = new Timer();
            //Set the time interval.
            time2.Interval = 200;
            time2.Elapsed += OnTimeInterval;
            time2.AutoReset = true;
            // Start the timer.
            time2.Enabled = true;
        }
    }
    private async void OnTimeInterval(object sender, ElapsedEventArgs e)
    {
        //Timer method, runs on time2 interval. 
        //Updates info on screen.

        await InvokeAsync(() => StateHasChanged());
    }
    public void Dispose()
    {
        // While navigating to other components, Dispose method will be called and clean up the Timer function.

        time2?.Dispose();
    }
    public async void UpdateList(){
        await FullUpdate.InvokeAsync();
        await InvokeAsync(() => StateHasChanged());
    }
    private async Task AddorRemoveActiveChecked(Job j)
    {
        //Adds or removes Job IDs from batch selected list.

        //Sets bachButtonID depending on if this is the Archive queue or not.
        string BatchButtonsID = "31";
        string checkboxID = "3cb";
        if (Archive){
            BatchButtonsID = "21";
            checkboxID = "2cb";
        }
        if (SelectedJobs.Contains(j))
        {
            //Remove selected.
            SelectedJobs.Remove(j);
            await JSFunctiion("ChangeBarColor", j.ID + "bar", "false");
            await JSFunctiion("SetHeight", j.ID + "CB", "inset(0px 0px 0px 0px)");
            //set minus to plus
        }
        else
        {
            //Add selected.
            SelectedJobs.Add(j);
            await JSFunctiion("ChangeBarColor", j.ID + "bar", "true");
            await JSFunctiion("SetHeight", j.ID + "CB", "inset(45.5% 0% 45.5% 0%)");
            //Set minus to plus;
        }


        if (SelectedJobs.Count() > 0)
        {
            //Displays batch buttons if a job is selected.

            await JSFunctiion("SetElementOpacity", BatchButtonsID, "100");
            await JSFunctiion("EnableDisableElement", BatchButtonsID, "false");
        }
        else
        {
            //Hides batch buttons if no jobs are selected.

            await JSFunctiion("SetElementOpacity", BatchButtonsID, "0");
            await JSFunctiion("EnableDisableElement", BatchButtonsID, "true");
        }
        if (SelectedJobs.Count() == JobList.Count())
        {
            //select all is selected.
            await JSFunctiion("SetCheckValue", checkboxID, "true");
        }
        else
        {
            await JSFunctiion("SetCheckValue", checkboxID, "false");
        }
    }
